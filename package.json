{
  "name": "twapi",
  "private": true,
  "type": "module",
  "description": "A collection of packages that connects to twitch backend services",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "ci": "pnpm run build && pnpm run lint && pnpm run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@turbo/gen": "^1.9.7",
    "@twapi/eslint-config-custom": "workspace:*",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "turbo": "^1.10.7"
  },
  "packageManager": "pnpm@7.15.0"
}
